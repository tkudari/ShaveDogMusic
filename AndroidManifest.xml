<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.tejus.shavedogmusic" android:versionCode="1"
	android:versionName="1.0">
	<uses-sdk android:minSdkVersion="9" />

	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name=".activity.PlayActivity"
			android:configChanges="orientation" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		 <activity android:name=".activity.CredentialsActivity"
        		  android:configChanges="orientation"
        		  android:noHistory="true"
                  android:label="@string/app_name">            
       	 </activity>

		<service android:name=".core.ShaveService"></service>
	</application>

	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<uses-permission android:name="android.permission.INTERNET" />
</manifest>